<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CourseRequisitesFragment" >

    <View
        android:id="@+id/top_divider"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="#E6E6E6"/>

    <RelativeLayout
        android:id="@+id/title_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/top_divider"
        android:layout_marginTop="17dp" >

        <TextView
            android:id="@+id/requisite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requisite Title"
            android:textColor="#3A3A3A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!-- TODO: ListView with all courses -->
        <ListView
            android:id="@+id/requisite_courses"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_below="@id/requisite_title"
            android:layout_marginTop="9dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_content_layout"
        android:layout_marginTop="17dp" />

</RelativeLayout>