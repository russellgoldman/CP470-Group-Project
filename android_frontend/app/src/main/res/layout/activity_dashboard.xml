<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">
    <!-- Dashboard -->

    <ImageButton
        android:id="@+id/viewCourseRegi"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="244dp"
        android:background="@drawable/rounded_button_yellow"
        android:elevation="4dp"
        android:src="@drawable/viewcoursereg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/viewFavs"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/rounded_button_pink"
        android:elevation="4dp"
        android:src="@drawable/yourfavs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/viewYourRatings"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="468dp"
        android:background="@drawable/rounded_button_black"
        android:elevation="4dp"
        android:src="@drawable/viewrates"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dashboard"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="37dp"
        android:gravity="top"
        android:text="@string/dashboard"
        android:textAppearance="@style/dashboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="146dp"
        android:layout_height="25dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="72dp"
        android:gravity="top"
        android:text="@string/welcome_joh"
        android:textAppearance="@style/welcome_joh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/todays_date"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/rounded_button_purple"
        android:gravity="center"
        android:textAppearance="@style/date"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
     />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:itemIconTint="@drawable/menu_item_selection_color"
        app:itemTextColor="@drawable/menu_item_selection_color"
        app:menu="@menu/bottom_nav_menu"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="673dp" />




</androidx.constraintlayout.widget.ConstraintLayout>