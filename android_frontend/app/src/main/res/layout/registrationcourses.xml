<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/regi_course_code"
        android:layout_width="92dp"
        android:layout_height="27dp" />

    <View
        android:id="@+id/regi_course_info"
        android:layout_width="281dp"
        android:layout_height="85dp"
        android:background="@drawable/rectangle_8"
        android:elevation="9dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/roomlocaltion"
        android:layout_width="92dp"
        android:layout_height="27dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/regi_course_code"/>

    <TextView
        android:id="@+id/days"
        android:layout_width="92dp"
        android:layout_height="27dp"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@id/roomlocaltion" />

    <TextView
        android:id="@+id/cp470"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:layout_below="@id/regi_course_code"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/roomlocaltion" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/removeitem"
        android:layout_toEndOf="@id/regi_course_info"
       />

</RelativeLayout>